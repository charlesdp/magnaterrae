doctype html

html lang="#{data.settings.site.i18n}"
  head
    = partial 'views/commons/meta_tags'
    = partial 'views/commons/favicon'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Taviraj:400,700'
    = yield_content :head

  body class="#{page_classes}"

    = partial 'views/commons/topbar'
    == yield

    = javascript_include_tag 'application'
    = yield_content :javascripts
